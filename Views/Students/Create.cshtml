				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="control-label"></span>

				<label asp-for="EnrollmentDate" class="control-label"></label>
				<input asp-for="EnrollmentDate" class="form-control" />
				<span asp-validation-for="EnrollmentDate" class="control-label"></span>
				
				<label asp-for="Gender" class="control-label"></label>
				<input asp-for="Gender" class="form-control" />
				<span asp-validation-for="Gender" class="control-label"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Sisesta" class="btn btn-primary"/>
			</div>

		</form>
	</div>
</div>
