@model IEnumerable<TallinnaRakenduslikCollegeTARpe24_StenUesson.Models.Course>

@{
    ViewData["Title"] = "Kursused/Õppeained";
}

<h1>Kursused</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Loo Kursus</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Department.Administrator.FullName)
            </th>
            <th>Tööriistad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => course.CourseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Credits)
                </td>
                <th>
                    @Html.DisplayNameFor(model => course.Department.Name)
                </th>            
                <th>
                    @Html.DisplayNameFor(model => course.Department.Administrator.FullName)
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseID" class="btn btn-dark">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CourseID" class="btn btn-dark">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CourseID" class="btn btn-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>